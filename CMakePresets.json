{
    "version": 3,
    "configurePresets": [
        {
            "name": "common-base",
            "hidden": true,
            "binaryDir": "${sourceDir}/build",
            "toolchainFile": "${sourceDir}/cmake/toolchains/vcpkg.cmake",
            "cacheVariables": {
                "CMAKE_CXX_STANDARD": "17",
                "ENABLE_COVERAGE": "OFF",
                "ENABLE_LINTERS": "OFF",
                "ENABLE_IPO": "OFF",
                "ENABLE_SANITIZERS": "OFF",
                "USE_STATIC_STD": "OFF"
            }
        },
        {
            "name": "debug-base",
            "hidden": true,
            "inherits": "common-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "release-base",
            "hidden": true,
            "inherits": "common-base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        },
        {
            "name": "clang-base",
            "hidden": true,
            "cacheVariables": {
                "COMPILER_TYPE": "Clang"
            }
        },
        {
            "name": "clang-debug",
            "inherits": [
                "debug-base",
                "clang-base"
            ],
            "displayName": "clang - Debug",
            "description": "Disable optimizations - include debug information."
        },
        {
            "name": "clang-release",
            "inherits": [
                "release-base",
                "clang-base"
            ],
            "displayName": "clang - Release",
            "description": "Optimize for speed - exclude debug information."
        },
        {
            "name": "gcc-base",
            "hidden": true,
            "cacheVariables": {
                "COMPILER_TYPE": "GNU"
            }
        },
        {
            "name": "gcc-debug",
            "inherits": [
                "debug-base",
                "gcc-base"
            ],
            "displayName": "gcc - Debug",
            "description": "Disable optimizations - include debug information."
        },
        {
            "name": "gcc-release",
            "inherits": [
                "release-base",
                "gcc-base"
            ],
            "displayName": "gcc - Release",
            "description": "Optimize for speed - exclude debug information."
        },
        {
            "name": "msvc-base",
            "hidden": true,
            "cacheVariables": {
                "CMAKE_GENERATOR": "Visual Studio 17 2022"
            },
            "condition": {
                "type": "equals",
                "lhs": "${hostSystemName}",
                "rhs": "Windows"
            }
        },
        {
            "name": "msvc-debug",
            "inherits": [
                "debug-base",
                "msvc-base"
            ],
            "displayName": "msvc - Debug",
            "description": "Disable optimizations - include debug information."
        },
        {
            "name": "msvc-release",
            "inherits": [
                "release-base",
                "msvc-base"
            ],
            "displayName": "msvc - Release",
            "description": "Optimize for speed - exclude debug information."
        }
    ]
}
